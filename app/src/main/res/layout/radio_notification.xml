<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@color/whiteColor"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/TitleNoti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:paddingTop="8dp"
        android:singleLine="true"
        android:text="UCT Radio"
        android:textColor="@color/totalBlack"
        android:textSize="17sp" />

    <Button
        android:id="@+id/notiButton"
        android:layout_width="35dp"
        android:layout_height="35dp"

        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:background="@android:drawable/screen_background_dark" />


    <TextView
        android:id="@+id/notif_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/notiButton"
        android:layout_alignLeft="@+id/TitleNoti"
        android:layout_alignStart="@+id/TitleNoti"
        android:text="Universidad CatÃ³lica de Temuco"
        android:textColor="@color/subBlack" />

</RelativeLayout>